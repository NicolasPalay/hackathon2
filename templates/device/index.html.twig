{% extends 'base.html.twig' %}

{% block title %}Device index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% include '_includes/filter.html.twig' with {form: form} only %}
            </div>
            <div class="col-md-9">
                <div class="grid">
                    {% for device in devices %}
                        {% include '_includes/card.html.twig' with {device: device} only %}
                        <div class="hk-li">
                        {#<li>{{ device.brand.nameBrand }}</li>
                        <li>{{ device.name }}</li>
                          <li><img src="{{ device.image }}" alt=""></li>#}
                        <li>Stock {{ device.stock }}</li>
                        <li>Mémoire {{ device.memory.numberMemory }} {{ '|' }} {{ device.memory.price }} {{ '€'}} </li>
                        <li>Taille {{ device.sizeScreen.numberSizeScreen }} {{ '|' }} {{ device.sizeScreen.price }} {{ '€'}}</li>
                        <li>{{ device.state.nameState }}</li>
                        <li>Caméra {{ device.camera.numberPixel }} {{ '|' }} {{ device.camera.price }} {{ '€'}}</li>
                            <li>
                                <div class="link-redirect">
                                    <a href="{{ path('app_device_show', {'id': device.id}) }}">show</a>
                                    <a href="{{ path('app_device_edit', {'id': device.id}) }}">edit</a>
                                </div>
                        </li>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('app_device_new') }}">Create new</a>
{% endblock %}
