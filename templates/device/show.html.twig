{% extends 'base.html.twig' %}

{% block title %}Device{% endblock %}

{% block body %}
    <h1>Device</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ device.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ device.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ device.image }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ device.stock }}</td>
            </tr>
